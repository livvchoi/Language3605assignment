<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/overlay_light">


    <androidx.cardview.widget.CardView
        android:id="@+id/cvAnswerQuizCategory"
        android:layout_width="376dp"
        android:layout_height="70dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAnswerQuizCategory"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:translationX="25dp"
            android:translationY="10dp" />

        <TextView
            android:id="@+id/tvAnswerQuizCategory"
            style="@style/style_answer_quiz_category"
            android:text="Category"
            android:textSize="24dp"
            android:textStyle="bold"
            android:translationX="140dp"
            android:translationY="15dp" />

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/cvQuestion"
        android:layout_width="368dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.488"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvAnswerQuizCategory">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="67dp"
            android:layout_height="70dp"
            android:layout_marginTop="12dp"
            android:translationX="10dp" />

        <TextView
            android:id="@+id/tvAnswerQuizQuestion"
            style="@style/style_option_question"
            android:layout_width="277dp"
            android:layout_height="56dp"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="Question"
            android:textStyle="bold"
            android:translationX="80dp" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOptionA"
        android:layout_width="313dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvQuestion">

        <TextView
            android:id="@+id/tvOptionAnswerA"
            style="@style/style_option_answer"
            android:text="Option A Text"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOptionB"
        android:layout_width="313dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvOptionA">

        <TextView
            android:id="@+id/tvOptionAnswerB"
            style="@style/style_option_answer"
            android:text="Option B Text"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOptionC"
        android:layout_width="313dp"
        android:layout_height="71dp"
        android:layout_marginTop="20dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvOptionB">

        <TextView
            android:id="@+id/tvOptionAnswerC"
            style="@style/style_option_answer"
            android:text="Option C Text"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@id/cvOptionC" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvOptionD"
        android:layout_width="313dp"
        android:layout_height="71dp"
        android:layout_marginTop="24dp"
        app:cardBackgroundColor="@color/grey_recycler_transparent"
        app:cardCornerRadius="30dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvOptionC">

        <TextView
            android:id="@+id/tvOptionAnswerD"
            style="@style/style_option_answer"
            android:text="Option D Text"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvAnswerQuizTimer"
        style="@style/style_option_question"
        android:layout_width="317dp"
        android:layout_height="39dp"
        android:layout_marginTop="104dp"
        android:gravity="center"
        android:text="timer"
        android:textSize="32dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cvOptionC" />

    <Button
        android:id="@+id/answerQuizTestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Test Button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
