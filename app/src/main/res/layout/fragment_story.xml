<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/overlay_light">


    <EditText
        android:id="@+id/editTextDate3"
        android:layout_width="194dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="date"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvStory"
        android:layout_width="match_parent"
        android:layout_height="379dp"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/tvStoryHeading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Other Similar Stories"
        android:textColor="@color/white"
        android:textSize="24dp" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/story1"
                android:layout_width="345dp"
                android:layout_height="91dp"
                app:cardBackgroundColor="#A0180F"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <TextView
                    android:id="@+id/story1Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:translationX="125dp"
                    android:translationY="50dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/story2"
                android:layout_width="345dp"
                android:layout_height="91dp"
                app:cardBackgroundColor="#A0180F"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <TextView
                    android:id="@+id/story2Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:translationX="125dp"
                    android:translationY="50dp" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/story3"
                android:layout_width="345dp"
                android:layout_height="91dp"
                app:cardBackgroundColor="#A0180F"
                app:cardCornerRadius="30dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardView">

                <TextView
                    android:id="@+id/story3Title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textColor="#FFFFFF"
                    android:textSize="18dp"
                    android:translationX="125dp"
                    android:translationY="50dp" />
            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </HorizontalScrollView>


</LinearLayout>